<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/containerElementoListaCompra"
    android:longClickable="true"
    android:clickable="true"
    android:divider="@drawable/drawer_shadow">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="?android:attr/activatedBackgroundIndicator">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtNombreSerieListaCompra"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTomo"
            android:id="@+id/txtVolumenListaCompra"
            android:layout_below="@+id/txtNombreSerieListaCompra"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNumeroVolListaCompra"
            android:layout_below="@+id/txtNombreSerieListaCompra"
            android:layout_toRightOf="@+id/txtVolumenListaCompra"
            android:textStyle="bold"
            android:textSize="19dp" />
    </RelativeLayout>

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/chkComprar"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"/>

</LinearLayout>